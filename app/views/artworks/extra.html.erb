.container-1 {
  display: flex;
}

.card-product {
  border-top: 0.5px solid lightgrey;
  overflow: hidden;
  height: 500px;
  display: flex;
  justify-content: left;
  align-items: flex-end;
  padding: 15px;
}
.card-product-infos {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.card-product img {
  height: 100%;
  width: 50%;
  object-fit: cover;
}
.card-product-infos span {
  font-size: 26px;
  margin: 0;
  line-height: 32px;
  letter-spacing: -0.01em;
  font-family: ll-unica77, “Helvetica Neue”, Helvetica, Arial, sans-serif;
}
.card-product-infos h1 {
  font-size: 26px;
  line-height: 32px;
  letter-spacing: -0.01em;
  color: rgb(112, 112, 112);
  font-family: ll-unica77, “Helvetica Neue”, Helvetica, Arial, sans-serif;
  margin-bottom: 0;
  margin-top: 8px;
  display: flex;
  align-items: flex-end;
}
#price {
margin-top: 20px;
font-size: 26px;
line-height: 32px;
letter-spacing: -0.01em;
color: rgb(0, 0, 0);
font-family: ll-unica77, “Helvetica Neue”, Helvetica, Arial, sans-serif;
}
.card-product .card-product-infos {
  padding: 16px;
}
