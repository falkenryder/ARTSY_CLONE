<h1>Artworks#show</h1>
<p>Find me in app/views/artworks/show.html.erb</p>
<%= @artwork.title %>
<%= @artwork.artist_name %>

<div class="delete">
  <%= link_to "Delete",
  artwork_path(@artwork),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</div>
<% if user_signed_in? %>
  <%= link_to "Make Offer", new_artwork_offer_path(@artwork) %>
<% else %>
  <%= link_to "Make Offer", new_user_session_path %>
<% end %>
