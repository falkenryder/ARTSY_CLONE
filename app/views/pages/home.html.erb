<%= render "devise/shared/navbar" %>

<div class="container">
  <div class="d-flex justify-content-between">
    <h1><strong>Artsy</strong></h1>

  </div>
</div>

<br>
<br>

<div class="container">
  <h3>Latest Artworks:</h3>


  <div class="row row-cols-auto g-6">
    <% @artworks.first(3).each do |artwork|%>
      <div><%= link_to artwork_path(artwork), :style=>'text-decoration: none;' do %></div>
        <div class="col icard bcard" style="background-image: url('https://picsum.photos/300/400')">
          <div class="h2-icard">
            <h2 class="h2-icard"><%= artwork.title %></h2>
          </div>
            <p class="p-icard">Artist: <%= artwork.artist_name %> </p>
            <p class="p-icard">  Price: $<%= artwork.price %></p>
        </div>
      <% end %>

    <% end %>

    </div>
  </div>
</div>
</div>

<%= render "devise/shared/footer" %>
