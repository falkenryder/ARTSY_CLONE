<%= render "devise/shared/navbar" %>
<%= render "devise/shared/carousel" %>


<div class="container">
  <h3 style="font-family: font-family: ll-unica77, 'Helvetica Neue', Helvetica, Arial, sans-serif;">Featured Artworks:</h3>
  <div class="container-index-art">
    <% @artworks.last(4).each do |artwork|%>
    <div class="card-index" style="margin: 30px">
     <%= link_to artwork_path(artwork), :style=>'text-decoration: none;' do %>
        <img class="card-img-top" src="https://source.unsplash.com/random/200x200" alt="Card image cap">
        <div class="card-body-index">
          <div class="title">
            <p class="p-index">Artist: <%= artwork.artist_name %></p>
            <i class="fa-regular fa-heart"></i>
          </div>
          <p class="title-index-card"><%= artwork.title %></p>
          <p class="price-index-card"><strong>$<%= artwork.price %></strong></p>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>


</div>


<%= render "devise/shared/footer" %>
